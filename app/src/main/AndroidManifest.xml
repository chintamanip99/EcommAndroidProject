<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e_comm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/necomm"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/necomm"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ConfirmActivity"
            android:theme="@style/AppTheme.Popup" ></activity>
        <activity
            android:name=".LoderActivity"
            android:theme="@style/AppTheme.Loader">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PopupActivity"
            android:theme="@style/AppTheme.Popup" />
        <activity android:name=".VerifyEmail"
            android:theme="@style/AppTheme.Popup" >
        </activity>
        <activity android:name=".CreateProfile" />
        <activity android:name=".SignUp" />
        <activity android:name=".Cart" />
        <activity android:name=".Login" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>